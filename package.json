{
  "name": "stravamcp",
  "version": "3.0.0",
  "description": "Remote MCP Server for Strava API - Works with Claude & ChatGPT - Runs on AWS Lambda (Free Tier)",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "strava-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "bun run typecheck && bun run build:tsc",
    "build:tsc": "tsc",
    "build:lambda": "bun run build && bun run copy-files",
    "copy-files": "cp package.json dist/ && cp .env.example dist/ && cp run.sh dist/",
    "dev": "bun --watch src/index.ts",
    "dev:lambda": "bun src/lambda-web.ts",
    "start": "bun dist/index.js",
    "typecheck": "tsc --noEmit",
    "deploy": "bun run build:lambda && bun scripts/deploy.ts",
    "deploy:fast": "bun run build:lambda && sam build && sam deploy",
    "deploy:show-config": "bun scripts/show-config.ts"
  },
  "keywords": [
    "mcp",
    "strava",
    "model-context-protocol",
    "api",
    "fitness"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.872.0",
    "@aws-sdk/client-secrets-manager": "^3.872.0",
    "@aws-sdk/lib-dynamodb": "^3.872.0",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.154",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.8",
    "bun-types": "latest",
    "typescript": "^5.9.3"
  },
  "trustedDependencies": ["@modelcontextprotocol/sdk"]
}
